<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:main_macro define-macro="content-core"
    tal:define="images view/results">
  <div metal:define-macro="text-field-view"
      id="parent-fieldname-text" class="stx"
      tal:define="text view/text"
      tal:condition="text"
      tal:attributes="class view/text_class">
    <div metal:define-slot="inside" tal:replace="structure text">The body</div>
  </div>
  <metal:listingmacro define-macro="listing"
      tal:define="portal context/@@plone_portal_state/portal;
                  image_scale portal/@@image_scale">
 
    <tal:images tal:repeat="image images">
      <div class="photoAlbumEntry"
           tal:define="scale python:image_scale.tag(image, 'image', scale='thumb', direction='down')">
        <div class="boxnotizia-dettagli">
          <span class="boxnotizia-data pat-moment" data-pat-moment="format:MMMM Do YYYY">${image/effective}</span>
        </div>
        <div class="boxnotizia-corpo">
          <a tal:attributes="href string:${image/getURL}/view;
                             title image/Description">
            <span class="photoAlbumEntryWrapper">
              <img condition="scale" tal:replace="structure scale" />
            </span>
          </a>
          <div class="boxnotizia-testo">
            <a tal:attributes="href string:${image/getURL}/view;
                             title image/Description">
              <h4 class="photoAlbumEntryTitle h4" tal:content="image/Title">
                  Title
              </h4>
            </a>
            <div class="boxnotixia-descrizione" tal:content="image/Description">
                Description
            </div>
          </div>
        </div>
      </div>
    </tal:images>

  <div class="visualClear"><!-- --></div>

 
  <div metal:use-macro="context/batch_macros/macros/navigation" />

  <metal:empty metal:define-slot="no_items_in_listing">
    <p class="discreet"
        tal:condition="python: not images and not albums"
        tal:content="view/no_items_message">
      There are currently no items in this folder.
    </p>
  </metal:empty>
  </metal:listingmacro>

</metal:main_macro>
</metal:content-core>

</body>
</html>
